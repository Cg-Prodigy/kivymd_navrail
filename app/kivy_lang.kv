        name:'intro_screen'
        MDBoxLayout:
            orientation: 'vertical'
            MDToolbar:
                title:'Navigation-Rail'
            MDBoxLayout:
                orientation:'vertical'
                MDNavigationRail:
                    use_hover_behavior: True
                    hover_bg: 0, 0, 0, .2
                    id:nav_rail
                    Rail:
