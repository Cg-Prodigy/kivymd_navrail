#: import get_color_from_hex kivy.utils.get_color_from_hex
<EntryPoint>:
    IntroScreen:
        MDBoxLayout:
            orientation: 'vertical'
            MDToolbar:
                id:top_bar
                title:'Navigation Rail'
                md_bg_color:.3,.3,.3,1
            MDBoxLayout:
                orientation:'horizontal'
                MDNavigationRail:
                    id:nav_rail
                    md_bg_color:[.5,.5,.5,1]
                    use_resizeable:True
                    use_action_button:True
                    on_action_button:root.open_rail()
                    action_icon_button:'plus-circle-multiple-outline'
                    action_color_button:get_color_from_hex('#ff4500')
                    use_hover_behavior:True
                    hover_bg:0,0,0,.3
                    visible:'Persistent'
                    MDNavigationRailItem:
                        text:'python'
                        icon:'language-python'
                        on_enter:root.set_item_color(self)
                    MDNavigationRailItem:
                        text:'Java'
                        icon:'language-java'
                        on_enter:root.set_item_color(self)
                MDGridLayout:
                    cols:3
                    spacing:dp(5)
                    padding:[dp(5),0,0,0]
                    Card
                    Card:
                    Card:


<Card@MDCard>:
    elevation:10
    md_bg_color:.4,.4,.4,1
    size_hint:.9,None
    height:dp(300)